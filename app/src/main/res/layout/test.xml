<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="jingruichen.mini_editor.miniEditor">

    <TextView
            android:text="Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="138dp" android:layout_alignStart="@+id/textView"/>
    <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_marginTop="189dp"
            android:layout_alignStart="@+id/editText1">

        <requestFocus/>
    </EditText>
    <TextView
            android:text="bcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_toStartOf="@+id/editText1"
            android:layout_alignBaseline="@+id/editText6"/>
    <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_alignStart="@+id/editText1" android:layout_alignParentTop="true"
            android:layout_marginTop="247dp">

        <requestFocus/>
    </EditText>
    <TextView
            android:text="Subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_toStartOf="@+id/editText1"
            android:layout_alignBaseline="@+id/editText5"/>
    <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_alignStart="@+id/editText1" android:layout_alignBottom="@+id/button3">

        <requestFocus/>
    </EditText>
    <TextView
            android:text="cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_toStartOf="@+id/editText1"
            android:layout_alignBottom="@+id/button3"/>
    <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_below="@+id/editText1" android:layout_toEndOf="@+id/textView">

        <requestFocus/>
    </EditText>
    <TextView
            android:text="To"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_toStartOf="@+id/editText1" android:layout_above="@+id/button3"
            android:layout_marginBottom="-10dp"/>
    <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button1"
            android:layout_alignRight="@+id/button1"
            android:layout_below="@+id/button1"
            android:layout_marginTop="10dp"
            android:text="preview" />
    <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignRight="@+id/button2"
            android:layout_below="@+id/button2"
            android:layout_marginTop="10dp"
            android:text="clear" />

    <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text=" submit " />

    <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_toEndOf="@+id/textView" android:layout_alignBottom="@+id/textView">

        <requestFocus/>
    </EditText>
    <TextView
            android:text="From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignParentStart="true" android:layout_marginStart="17dp"
            android:layout_below="@+id/button1"/>
    <EditText
            android:layout_width="305dp"
            android:layout_height="227dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:id="@+id/editText7"/>

</RelativeLayout>